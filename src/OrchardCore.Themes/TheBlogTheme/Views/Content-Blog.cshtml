<zone name="Header">
    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('@Href("~/TheBlogTheme/img/home-bg.jpg")')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>@Model.ContentItem.Content.TitlePart.Title</h1>
                        <hr class="small">
                        <span class="subheading">@await DisplayAsync(Model.Content.Named("BodyPart"))</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
</zone>

@{
    Model.Content.Remove("BodyPart");
}

@await DisplayAsync(Model.Content)